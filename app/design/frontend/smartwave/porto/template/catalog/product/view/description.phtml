/**
 * Product description template
 *
 * @see Mage_Catalog_Block_Product_View_Description
 */
?>
<?php $_description = $this->getProduct()->getDescription(); ?>
<?php if ($_description): ?>
    <h2><?php echo $this->__('Details') ?></h2>
    <?php
    $youtube = $this->getProduct()->getYoutube();
    if (strpos($youtube, "iframe")){
        echo $youtube;
    }elseif($i = strpos($youtube, "youtu.be/")){
        $code_youtube = substr($youtube, $i+9);
        $youtube = '<iframe width="90%" height="100%" src="https://www.youtube.com/embed/' . $code_youtube . '" frameborder="0" allowfullscreen></iframe>';
    }
    ?>
    <div class="std">
        <?php if (!empty($youtube)):?>
            <a name="youtube" style="position:absolute;margin-top:-130px;display: block;"></a>
            <div class="youtube">
                <?php echo $youtube; ?>
            </div>
        <?php endif;?>
        <?php echo $this->helper('catalog/output')->productAttribute($this->getProduct(), $_description, 'description') ?>
    </div>
<?php endif; ?>
